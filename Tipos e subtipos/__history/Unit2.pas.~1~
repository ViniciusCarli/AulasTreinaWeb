unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls;

type
  TForm2 = class(TForm)
    Button1: TButton;
    lblResultado: TLabel;
    rdbluxo: TRadioButton;
    rdbDiamante: TRadioButton;
    rdbCristal: TRadioButton;
    rdbPresidencial: TRadioButton;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form2: TForm2;

implementation

{$R *.dfm}

procedure TForm2.Button1Click(Sender: TObject);
type
  Suite = (Luxo, Diamante, Cristal, Presidencial);
var
  MinhaSuite : Suite;

begin
  if rdbluxo.Checked then
    MinhaSuite := Luxo
  else if rdbDiamante.Checked then
    MinhaSuite := Diamante
  else if rdbCristal.Checked then
    MinhaSuite := Cristal
  else if rdbPresidencial.Checked then
    MinhaSuite := Presidencial;

  case MinhaSuite of
    Luxo          : lblResultado.Caption := 'Suite Luxo';
    Diamante      : lblResultado.Caption := 'Suite Diamante';
    Cristal       : lblResultado.Caption := 'Suite Cristal';
    Presidencial  : lblResultado.Caption := 'Suite Presidencial';
  end;

end;

end.
