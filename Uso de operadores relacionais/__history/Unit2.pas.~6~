unit Unit2;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Vcl.Samples.Spin;

type
  TlabelResultado = class(TForm)
    Button1: TButton;
    Label1: TLabel;
    SpinEdit1: TSpinEdit;
    Label2: TLabel;
    labelResultado: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  labelResultado: TlabelResultado;

implementation

{$R *.dfm}

procedure TlabelResultado.Button1Click(Sender: TObject);
var
 Valor1 : Integer;
begin
  Valor1 := SpinEdit1.Value;

   if Valor1 = 10 then
    labelResultado.Caption := 'O valor é igual a 10'
    else
    labelResultado.Caption := 'O valor digitado é diferente de 10';

end;

end.
